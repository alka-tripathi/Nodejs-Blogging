<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Home Page</title>
  </head>
  <body>
    <%- include("./partials/nav") %> <%= JSON.stringify(user) %>

    <div class="container-fluid text-center p-3">
      <div
        class="row d-flex justify-content-center align-items-center bg-body-secondary border"
        style="height: 50px"
      >
        ROW
        <!-- <div class="col">Column</div> -->
      </div>
    </div>

    <div class="container mt-4">
      <div class="row">
        <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="Blog Image"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a
                href="/blogs/<%= blog._id %>"
                class="btn btn-primary"
                >Read More</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
