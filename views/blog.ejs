<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img
        src="<%= blog.coverImageURL %>"
        class="img-fluid"
      />

      <pre class="mt-3"> <%= blog.body %></pre>
    </div>

    <div class="container mt-4">
      <img
        src="<%= blog.createdBy.profileImageUrl %>"
        width="50px"
      />
      <%=blog.createdBy.fullName %>
    </div>

    <div class="container mt-4">
      <h1>Comments</h1>
      <form
        action="/user/signin"
        method="post"
      >
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter Your Comment"
          />
          <button type="submit">Add</button>
        </div>

        <div class="mb-3">
          <label
            for="exampleInputPassword1"
            class="form-label"
            >Password</label
          >
          <input
            type="password"
            name="password"
            class="form-control"
            id="exampleInputPassword1"
          />
        </div>

        <button
          type="submit"
          class="btn btn-primary"
        >
          Submit
        </button>
      </form>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
