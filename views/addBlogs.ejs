<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Add New Blog page</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container mt-3">
      <form>
        <div class="mt-3">
          <label
            for="title"
            class="form-label"
            >Title</label
          >
          <input
            type="text"
            class="form-control"
            id="title"
            aria-describedby="title"
          />
        </div>

        <div class="mt-3">
          <label
            for="body"
            class="form-label"
            >Body</label
          >
          <div class="form-floating">
            <textarea
              class="form-control"
              placeholder="Leave a comment here"
              id="floatingTextarea2"
              style="height: 100px"
            ></textarea>
            <label for="floatingTextarea2">Comments</label>
          </div>
        </div>
      </form>
    </div>
    <%-include("./partials/script") %>
  </body>
</html>
