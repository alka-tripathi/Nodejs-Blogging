<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Add New Blog</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container mt-3">
      <form
        action="/blogs/addnew"
        method="post"
        enctype="multipart/form-data"
      >
        <!-- Cover Image -->
        <div class="mt-3">
          <label
            for="coverImage"
            class="form-label"
            >Cover Image</label
          >
          <input
            type="file"
            class="form-control"
            id="coverImage"
            name="coverImage"
          />
        </div>

        <!-- Title -->
        <div class="mt-3">
          <label
            for="title"
            class="form-label"
            >Title</label
          >
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          />
        </div>

        <!-- Body -->
        <div class="mt-3">
          <label
            for="body"
            class="form-label"
            >Blog Content</label
          >
          <div class="form-floating">
            <textarea
              class="form-control"
              placeholder="Write your blog content here..."
              id="body"
              style="height: 150px"
              name="body"
              required
            ></textarea>
            <label for="body">Blog Content</label>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="mt-3 mb-3">
          <button
            type="submit"
            class="btn btn-primary"
          >
            Submit
          </button>
        </div>
      </form>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
